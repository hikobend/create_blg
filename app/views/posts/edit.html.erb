<div class="container">
  <h1>編集画面</h1>
  <%= form_with(modal: @post, url: post_path(@post), local: true, method: :put) do |f| %>

    <div class="mb-3">
      <div class="field-form">
        <%= f.label :title, class: 'form-label' %>
        <%= f.text_field :title, autofocus: true, :placeholder =>"#{@post.title}", class: 'form-control' %>
      </div>
    </div>

    <div class="mb-3">
      <div class="field-form">
        <%= f.label :tag, class: 'form-label' %>
        <%= f.text_field :tag, autofocus: true, :placeholder =>"#{@post.tag}", class: 'form-control' %>
      </div>
    </div>

    <div class="mb-3">
      <div class="field-form">
        <%= f.label :body, class: 'form-label' %>
        <%= f.text_area :body, autofocus: true, :placeholder =>"#{@post.body}", class: 'form-control' %>
      </div>
    </div>

    <div class="mb-3">
      <div class="field-form">
        <%= f.submit "作成", class: "btn btn-primary"%>
      </div>
    </div>
  <% end %>
</div>
