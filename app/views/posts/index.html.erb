<div class="container">
  <% if user_signed_in? %>
    <%= link_to '記事投稿', new_post_path, class: 'btn btn-primary' %>
  <% end %>
  <% @posts.each do |post| %>
  <div class="card mb-3">
    <div class="row g-0">
      <div class="col-md-4">
        <img alt="アイコン" height="150" src="/assets/noimage.png" width="300" class="post-image" />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h6 class="card-title"><small class="text-muted">作成日 : <%= l post.created_at, format: :short %></small></h6>
          <h2 class="card-title"><%= link_to post.title, post_path(post), class: 'post-title' %></h2>
          <h4 class="card-title"><small class="text-muted"><%= post.tag %></small></h4>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate @posts %>
</div>
